<Window x:Class="UruruNotes.Views.NewFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New File" Height="200" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Введите имя нового файла:" Margin="0,0,0,10"/>
        <Grid>
            <TextBox x:Name="FileNameTextBox" Width="350" />
            <TextBlock Text="Введите имя файла"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding ElementName=FileNameTextBox, Path=Text.Length, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='False'}" />
        </Grid>
        <Button Content="Создать" Click="CreateButton_Click" Margin="0,10,0,0" Width="80" HorizontalAlignment="Right"/>
    </Grid>
</Window>
