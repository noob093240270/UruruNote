<Window x:Class="UruruNotes.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:UruruNotes.Helpers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid x:Name="MainGrid" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="35pt" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50pt" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,10,0">
            <Button Content="Создать новый файл" 
                    Click="CreateNewFileButton_Click" 
                    Margin="0,0,10,0" />
        </StackPanel>

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <!-- <Image Source="C:\Users\dd\source\repos\UruruNotes\UruruNotes\Resources\homeButton.png" Height="20" Margin="20,0,0,0"/> -->
                <DockPanel LastChildFill="True">
                    <TextBlock DockPanel.Dock="Top"
                           Text="My daily tasks"
                           FontSize="14pt"
                           Margin="10pt,0,0,0" />
                </DockPanel>
            </StackPanel>


        </StackPanel>

        <!-- Дерево файлов -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,10,0">
            <TreeView ItemsSource="{Binding Files}" 
                      SelectedItemChanged="TreeView_SelectedItemChanged" 
                      Margin="10,10,395,0">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding SubItems}">
                        <TextBlock Text="{Binding FileName}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </materialDesign:Card>

        <Button Content="Создать начальный файл Markdown"
        Command="{Binding CreateInitialMarkdownFileCommand}" 
        Visibility="{Binding IsCreateButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
        Grid.Column="2" 
        Grid.Row="2" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Center" 
        Margin="0,0,20,0" />

        <GridSplitter Grid.Column="1"
                      ShowsPreview="False"
                      Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Grid.RowSpan="6" />

        
    </Grid>
</Window>

