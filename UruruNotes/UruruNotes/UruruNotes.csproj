    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3124.44" />
    <PackageReference Include="MvvmLightLibs" Version="5.4.1.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="TaskScheduler" Version="2.12.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\calendar.png" />
    <Resource Include="Resources\homeButton.png" />
    <Resource Include="Resources\magnifier.png" />
    <Resource Include="Resources\settingsbutton.png" />
    <Resource Include="Resources\treeview.png" />
    <Resource Include="Views\calendar.png" />
    <Resource Include="Views\homeButton.png" />
    <Resource Include="Views\logo2.png" />
    <Resource Include="Views\logo3.ico" />
